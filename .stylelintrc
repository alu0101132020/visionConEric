{
    "extends": "stylelint-config-standard",
    "rules": {
        "selector-nested-pattern": "^&",
        "at-rule-no-unknown": [
            true,
            {
                "ignoreAtRules": [
                    "define-mixin",
                    "mixin"
                ]
            }
        ],
        "indentation": [
            4,
            {
                "except": ["block"],
                "message": "Please use 4 spaces for indentation.",
                "severity": "warning"
            }
        ]
    }
}